{
  //  "image": "maxs_rocm_dev_container_2",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--name",
    "maxs_triton_devcontainer_clion",
    "--network=host",
    "--device=/dev/kfd",
    "--device=/dev/dri",
    "--group-add",
    "video",
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "-v",
    "/home/mleventa/triton:/home/vscode/triton",
    "-v",
    "/data:/data",
    "-v",
    "/mnt:/mnt",
    "--shm-size=16G",
    "--ulimit",
    "memlock=-1"
  ],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "ms-vscode.cmake-tools",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  }
}